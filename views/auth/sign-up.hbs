<div id="form">
<h2>Sign Up</h2>

<form action="/sign-up" method="POST">
    <label for="username">User
    <input type="text" name="username" id="username" placeholder="Write your username...">
    </label>
    <label for="hashedPassword">Password
    <input type="password" name="hashedPassword" id="hashedPassword" placeholder="Write your password...">
    </label>
    <button type="submit">Create user</button>
    {{#if errorMessage}}
        <p class="error">{{errorMessage}}</p>
    {{/if}}
</form>
</div>